{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run bake and deploy",
            "args": ["baker/bakeAndDeploySite.ts"],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register",
                "-r",
                "dotenv/config"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        },
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "args": ["${relativeFile}"],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register",
                "-r",
                "dotenv/config"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest",
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "args": ["-i"],
            "internalConsoleOptions": "openOnSessionStart",
            "envFile": "${workspaceRoot}/.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest current file",
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "args": ["-i", "${relativeFile}"],
            "internalConsoleOptions": "openOnSessionStart",
            "envFile": "${workspaceRoot}/.env"
        },
        {
            "name": "Attach to node",
            "type": "node",
            "request": "attach",
            "restart": true
        },
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/app/": "${workspaceFolder}/wordpress"
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}
